---
interface Props {
  prevSlug: string;
  nextSlug: string;
  slug: string;
  prevText: string;
  nextText: string;
}
const { prevSlug, nextSlug, slug, prevText, nextText } = Astro.props;
---

<div
  class="relative mt-10 h-6 text-[1.6rem] leading-normal tracking-widest text-black xs:mt-16 xs:h-10 xs:text-base"
>
  {
    prevSlug && (
      <div class="absolute top-0 left-0 flex min-h-[1.5rem] items-center bg-[url('/images/common/icon_paging_previous.svg')] bg-[length:24px_24px] bg-left-top bg-no-repeat transition-opacity ease-out-expo xs:min-h-[4rem] xs:bg-[length:40px_40px] xs:duration-500 xs:hover:opacity-80">
        <a
          href={"/" + slug + "/" + prevSlug + "/"}
          rel="prev"
          class="flex flex-col gap-2 pl-[3.2rem] text-[1.6rem] tracking-normal xs:pl-20 xs:tracking-normal"
        >
          <span>{prevText}</span>
        </a>
      </div>
    )
  }
  {
    nextSlug && (
      <div class="absolute top-0 right-0 flex min-h-[1.5rem] items-center bg-[url('/images/common/icon_paging_next.svg')] bg-[length:24px_24px] bg-right-top bg-no-repeat text-right transition-opacity ease-out-expo xs:min-h-[4rem] xs:bg-[length:40px_40px] xs:duration-500 xs:hover:opacity-80">
        <a
          href={"/" + slug + "/" + nextSlug + "/"}
          rel="next"
          class="flex flex-col gap-2 pr-[3.2rem] text-[1.6rem] tracking-normal xs:pr-20 xs:tracking-normal"
        >
          <span>{nextText}</span>
        </a>
      </div>
    )
  }
</div>
