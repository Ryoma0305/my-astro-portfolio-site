---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div
  class="header-main haeder-main-lowerpage relative mb-4 flex items-center justify-center bg-main pt-[9.6rem] pb-16 xs:mb-40"
>
  <div
    class="header-main-text haeder-main-lowerpage-content flex w-[86%] flex-col items-start pt-32 pb-40 text-white xs:flex-row"
  >
    <h2
      class="haeder-main-lowerpage-content-ttl boder-b-white mb-8 mr-0 border-b-[4px] pb-4 font-accent text-[4rem] font-bold xs:mr-96 xs:mb-0 xs:text-[5.6rem]"
    >
      {title}
    </h2>
  </div>
</div>
